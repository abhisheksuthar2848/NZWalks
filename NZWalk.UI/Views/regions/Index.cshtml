@model IEnumerable<NZWalk.UI.Models.DTO.RegionDTO>
<h1 class="mt-3">Regions</h1>

<div>
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add" >Add Region</a>
</div>

@*<button class="btn btn-success" asp>Add Regions</button>*@
<table class="table table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Code</td>
            <td>Name</td>
            <td>image</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td><img height="100px" width="100px" src="@item.RegionImageUrl" /></td>
                <td class="align-content-between">
                    
                    <a asp-controller="Regions" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light">Edit</a>
                    <a asp-controller="Regions" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-light">Delete</a>
                    </td>
            </tr>
        }
    </tbody>

</table>